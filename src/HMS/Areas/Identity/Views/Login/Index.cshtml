@model LoginViewModel
@{
    ViewData["Title"] = "ادخلوها بسلام";
}
<div class="panel panel-default top30">
    <div class="panel-heading">
        <h3 class="panel-title">اطلاعات ورود به سیستم</h3>
    </div>
    <div class="panel-body">
        <form asp-controller="Login"
              asp-action="Index"
              asp-route-returnurl="@ViewData["ReturnUrl"]"
              method="post"
              autocomplete="off"
              class="form-horizontal">
            <partial name="_CustomValidationSummary" />
            <div class="form-group">
                <label asp-for="Username" class="col-md-2 control-label"></label>
                <div class="controls col col-md-10">
                    <div class="input-group col-md-4">
                        <span class="input-group-addon">
                            <span class="fas fa-user"></span>
                        </span>
                        <input asp-for="Username" autocomplete="off" dir="ltr" class="form-control col-md-4" />
                    </div>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="col-md-2 control-label"></label>
                <div class="controls col col-md-10">
                    <div class="input-group col-md-4">
                        <span class="input-group-addon">
                            <span class="fas fa-asterisk"></span>
                        </span>
                        <input asp-for="Password" dir="ltr" class="form-control col-md-4" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col col-md-2 control-label">
                    کد امنیتی
                </label>
                <div class="controls col col-md-10">
                    <dnt-captcha asp-captcha-generator-max="9000"
                                 asp-captcha-generator-min="1"
                                 asp-captcha-generator-language="Persian"
                                 asp-font-name="Tahoma"
                                 asp-font-size="20"
                                 asp-fore-color="#333333"
                                 asp-back-color="#ccc"
                                 asp-text-box-class="text-box single-line form-control col-md-4"
                                 asp-text-box-template="<div class='input-group col-md-4'><span class='input-group-addon'><span class='glyphicon glyphicon-lock'></span></span>{0}</div>"
                                 asp-validation-message-class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-info col-md-2">ادخلوها بسلام آمنین</button>
                </div>
            </div>
        </form>
    </div>
    <footer class="panel-footer">
        <div class="login-about">
            <p class="login-title" data-text="نکات ورود به سیستم"></p>
            <ul>
                <li data-text="طبقه بندی این سامانه خیلی محرمانه می باشد"></li>
                <li data-text="امکان ردگيری، بازبينی فعاليت های کاربر وجود دارد"></li>
                <li data-text="سيستم متعهد به رعايت حقوق شخصی کاربران می باشد"></li>
                <li data-text="مسئوليت کاربر در قبال اطلاعات حساس مورد دستيابی است"></li>
            </ul>
        </div>
    </footer>
</div>