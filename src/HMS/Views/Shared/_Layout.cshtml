@{
    var pageTitle = ViewData["Title"] ?? "فرماندهی بهداری ندسا";
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@pageTitle</title>
    <link href="~/css/site.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/Kendo.min.css" rel="stylesheet" asp-append-version="true" />
    <script src="~/js/site.min.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/Kendo.min.js" type="text/javascript" asp-append-version="true"></script>
    <script type="text/javascript">// to use kendo.culture.fa-IR.js
        kendo.culture("fa-IR");</script>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header pull-left">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">مدیریت یکپارچه بیمارستانی</a>
                <img class="Logo-Sep" src="/images/arm-1b.png" alt="ندسا">
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <partial name="_UserMenu" />
                    <partial name="_ReportsMenu" />
                    @if (User.IsInRole(ConstantRoles.Admin))
                    {
                        <partial name="_AdminMenu" />
                    }
                }
                else
                {
                    <ul class="nav navbar-nav">
                        <li>
                            <a asp-area="@AreaConstants.IdentityArea" asp-controller="Login" asp-action="Index">
                                <span class="fas fa-sign-in" aria-hidden="true"></span>
                                ورود
                            </a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <breadcrumb asp-homepage-title="خانه"
                            asp-homepage-url="@Url.Action("Index", "Home", values: new { area = "" })"
                            asp-homepage-glyphicon="fas fa-home"></breadcrumb>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="row">
            <div class="col-md-12 col-md-push-0">
                @RenderBody()
            </div>
        </div>
    </div>
    <footer id="footer" dir="ltr" class="navbar navbar-default navbar-fixed-bottom">
        <div class="container">
            <div class="text-center footer-text">
                <span class="copyright-text"><span class="fa fa-anchor" style="color:#46b8da" aria-hidden="true"></span> <a href="@Url.Action("Index", "Home", values: new { area = "" })" target="_blank" title="سلامتی و تعجیل در فرج حضرت حجت روحی له  الفداه صلوات">فرماندهی بهداری ندسا</a><span class="fa fa-anchor" style="color:#46b8da" aria-hidden="true"></span></span>
            </div>
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>